<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>root</artifactId>
		<groupId>org.akraievoy.elw</groupId>
		<version>1.3</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<name>elw :: datapath-gui</name>
	<artifactId>datapath-gui</artifactId>
	<groupId>org.akraievoy.elw</groupId>

	<repositories>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-4</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<!--fixme: add the main GUI class -->
							<mainClass>fixme</mainClass>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>jar-with-deps</id>
						<phase>test</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>pack-and-sign</id>
						<phase>package</phase>
						<configuration>
							<tasks>
								<signjar storepass="ohnonotagain" alias="mykey" keystore="${basedir}/../ext/cert/keystore">
										<fileset file="${basedir}/target/${project.artifactId}-${project.version}-jar-with-dependencies.jar" />
								</signjar>

								<copy
										file="${basedir}/target/${project.artifactId}-${project.version}-jar-with-dependencies.jar"
										tofile="${basedir}/../web/src/main/webapp/code/${project.artifactId}-${project.version}-full.jar"
										/>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<dependencies>
		<!-- our modules -->
		<dependency>
			<groupId>org.akraievoy.elw</groupId>
			<artifactId>datapath</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
