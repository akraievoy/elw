#* @vtlvariable name="courses" type="elw.vo.Course[]" *#
<html>
<head>
	<meta content="text/html; charset=UTF-8">
	<title>Enrollments List : ELW Admin</title>
	<link href="../css/elw.css" type="text/css" rel="stylesheet"/>
	<script type="text/javascript" src="../js/jquery.js"></script>
	<script type="text/javascript" src="../js/jquery.sha1.js"></script>
</head>
<body style="text-align: left;">
<div id="header">
	<div id="nav"><a href="index">Index</a> &gt; <span style="font-weight: bold">Enrollments</span></div>
	<div id="cred">#if($auth)[&nbsp;Admin&nbsp;]&nbsp;[&nbsp;<a href="logout">X</a>&nbsp;]#{else}[&nbsp;Anonymous&nbsp;]#end</div>
	&nbsp;
</div>
<div id=messages>#foreach($m in $elw_messages)
	<div class="$m.type">$m.message</div>
#end
</div>
<table cellspacing=0 cellpadding=0><tbody>
#foreach($enr in $enrolls)
	<tr class="header">
		<td style="padding-left: 1em; padding-right: 0.25em;"><a href="enroll?id=$enr.id" title="id&nbsp;:&nbsp;${enr.id}">${enr.name}</a>&nbsp;</td>
		<td style="padding-left: 0.25em; padding-right: 0.25em;"><a href="groups#$groups.get($enr.groupId).id">$groups.get($enr.groupId).name</a>&nbsp;<span class="extra">(id&nbsp;:&nbsp;$enr.groupId)</span></td>
		<td style="padding-left: 0.25em; padding-right: 0.25em;"><a href="course?id=$courses.get($enr.courseId).id">$courses.get($enr.courseId).name</a>&nbsp;<span class="extra">(id&nbsp;:&nbsp;$enr.courseId)</span></td>
		<td style="padding-left: 0.25em; padding-right: 0.25em;">
			<form action="enroll" method="get" style="margin: 0; display: inline;">
				<input type="hidden" name="id" value="$enr.id"/>
				<input type="submit" value="Summary"/>
			</form>
			<form action="log" method="get" style="margin: 0; display: inline;">
				<input type="hidden" name="id" value="$enr.id"/>
				<input type="submit" value="Log"/>
			</form>
		</td>
	</tr>
	#foreach($cl in $enr.classes)
	<tr >
		<td style="padding-left: 2em; padding-right: 0.25em;">$cl.niceDate</td>
		<td style="padding-left: 0.25em; padding-right: 0.25em;">$cl.fromTime -- $cl.toTime</td>
		<td style="padding-left: 0.25em; padding-right: 0.25em;">
		#if($cl.today)
			<span style="font-weight:bold">Today#if($cl.current)&nbsp;Current#end</span>
		#else
			#if($cl.passed)Passed $cl.dayDiff days ago
			#else
				Due in $cl.dayDiff days
			#end
		#end
		</td>
		<td>
			&nbsp;
		</td>
	</tr>
	#end
#end
</tbody></table>
</body>
</html>
