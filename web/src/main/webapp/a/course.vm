#* @vtlvariable name="elw_messages" type="elw.miniweb.Message[]" *#
#* @vtlvariable name="elw_student" type="elw.vo.Student" *#
#* @vtlvariable name="elw_group" type="elw.vo.Group" *#
#* @vtlvariable name="course" type="elw.vo.Course" *#
#* @vtlvariable name="studId" type="java.lang.Integer" *#
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta content="text/html; charset=UTF-8">
	<title>Course ${course.name} : ELW Admin</title>
	<link href="../css/elw.css" type="text/css" rel="stylesheet"/>
</head>
<body>
<div id="header">
	<div id="nav"><a href="index">Index</a> &gt; <a href="courses">Courses</a> &gt; <span style="font-weight: bold">${course.name}</span></div>
	<div id="cred">[&nbsp;#if($auth)Admin#{else}Anonymous#end&nbsp;]</div>
	&nbsp;
</div>
<div id=messages>#foreach($m in $elw_messages)
	<div class="$m.type">$m.message</div>
#end
</div>
<div id=main>
	<table><tbody>
	<tr><td style="padding-left: 2em;" colspan=3>Assignment bundles:</td></tr>
	#foreach($assBundle in $course.assBundles)#set($bunI = $velocityCount - 1)
	<tr><td style="padding-left: 3em;" colspan=3>Assignments:</td></tr>
	 #foreach($ass in $assBundle.assignments)#set($assI = $velocityCount)
	<tr><td style="padding-left: 5em; border-bottom: #CCCCCC dotted 1px; background-color: #EEEEEE;" colspan=3>$ass.name&nbsp;<span style="font-size: smaller">(id:&nbsp;#if($ass.id)$ass.id#{else}null#end)</span>&nbsp;:&nbsp;</td></tr>
		#foreach($ver in $ass.versions)#set($verI = $velocityCount)
		#set($path="${course.id}--${bunI}--${ass.id}--${ver.id}")
	<tr>
		<td style="padding-left: 8em;">$ver.name&nbsp;<span style="font-size: smaller">(id:&nbsp;#if($ver.id)$ver.id#{else}null#end)</span></td>
		<td style="padding-left: 1em; padding-right: 1em;">[&nbsp;<a href="launch?path=$path">Code</a>&nbsp;]</td>
		<td style="padding-left: 1em; padding-right: 1em;">
			#if($testResults)
			#set($res=$testResults.get($path))
				#if($res.success)#set($resColor="#00FF00")#else#set($resColor="#FF0000")#end
				<span style="color:$resColor">$res.message</span>
			#else
				&nbsp;
			#end
		</td>
	</tr>
		#end
	 #end
	#end
	</tbody></table>
</div>
</body>
</html>